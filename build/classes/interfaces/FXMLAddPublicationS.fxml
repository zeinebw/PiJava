<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.FXMLAddPublicationController">
   <children>
      <VBox alignment="TOP_CENTER" layoutY="-3.0" prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Text fill="#172361" strokeType="OUTSIDE" strokeWidth="0.0" text="Ajouter Publication">
                     <font>
                        <Font name="Bauhaus 93" size="33.0" />
                     </font>
                  </Text>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Titre">
                     <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </HBox.margin>
                  </Text>
                  <TextField fx:id="fxTitre" prefHeight="32.0" prefWidth="330.0">
                     <HBox.margin>
                        <Insets bottom="20.0" left="35.0" right="20.0" top="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Description">
                     <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </HBox.margin>
                  </Text>
                  <TextArea fx:id="fxDescription" prefHeight="58.0" prefWidth="474.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextArea>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Img">
                     <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="30.0" top="20.0" />
                     </HBox.margin>
                  </Text>
                  <TextField fx:id="fxImg" prefHeight="30.0" prefWidth="338.0">
                     <padding>
                        <Insets left="100.0" right="100.0" />
                     </padding>
                     <HBox.margin>
                        <Insets bottom="20.0" left="25.0" top="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <JFXButton onMouseClicked="#fxAjouter" text="Ajouter">
                     <font>
                        <Font name="Berlin Sans FB" size="19.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </JFXButton>
                  <JFXButton onMouseClicked="#fxAnnuler" text="Annuler">
                     <font>
                        <Font name="Berlin Sans FB" size="19.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </JFXButton>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
